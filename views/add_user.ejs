<%- include('includes/head.ejs') %>

<main class="container">
        <div class="row">
            <a href="/">Volver al menú</a>
            <br><br>
            <h1><%= titulo %></h1>

            <div class="col s12 m6 l4">
                
                <form action="/login/adduser" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
                    <label for="nombre_completo">Nombre completo: </label>
                    <input type="text" id="nombre_completo" name="nombre_completo" placeholder="Juan Aldama Hidalgo Pérez" required>
                    <br/>
                    <br/>
                    <label for="username">Nombre de usuario: </label>
                    <input type="text" id="username" name="username" placeholder="juanaldama77">
                    <br/>
                    <br/>
                    <label for="password">Contraseña: </label>
                    <input type="password" id="password" name="password" placeholder="********">
                    <br/>
                    <br/>
                    <input type="submit" id="enviar" name="enviar" value="Enviar">
                </form>
                
            </div> 
        </div> 
        <br><br><br><br><br><br>

</main>
<%- include('includes/footer.ejs') %> 